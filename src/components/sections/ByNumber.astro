---
import Container from "../shared/Container.astro";
---

<section class="relative mt-12 md:mt-16">
  <Container>
    <div
      class="mx-auto p-6 sm:p-8 py-8 sm:py-10 max-w-5xl rounded-3xl bg-box-bg border border-box-border shadow-lg shadow-box-shadow grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 md:gap-10 lg:gap-12 items-center justify-items-center relative"
    >
      <div class="text-center flex flex-col h-full justify-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 font-['Roboto']"
        >
          3+
        </h2>
        <p class="mt-3 text-heading-3 font-['Roboto']">Created projects</p>
      </div>

      <div class="text-center flex flex-col h-full justify-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 font-['Roboto']"
        >
          2+
        </h2>
        <p class="mt-3 text-heading-3 font-['Roboto']">Happy Clients</p>
      </div>

      <div class="text-center flex flex-col h-full justify-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 font-['Roboto']"
        >
          2+
        </h2>
        <p class="mt-3 text-heading-3 font-['Roboto']">Months of Excellence</p>
      </div>

      <style>
        /* Adjust grid layout for symmetry */
        [class*="grid"] {
          position: relative;
        }

        [class*="grid"] > div {
          display: flex;
          flex-direction: column;
          justify-content: center;
          min-height: 8rem; /* Consistent height for centering */
        }

        /* Centered and content-height dividers */
        [class*="grid-cols-"]::before,
        [class*="grid-cols-"]::after {
          content: '';
          position: absolute;
          top: 50%;
          transform: translateY(-50%);
          width: 0.0625rem; /* 1px equivalent in rem */
          background-color: rgba(255, 255, 255, 0.2); /* Subtle divider */
          height: 40%; /* Reduced from 60% to 40% to make lines shorter */
        }

        [class*="grid-cols-"]::before {
          left: 33.333%; /* Between first and second column */
        }

        [class*="grid-cols-"]::after {
          left: 66.666%; /* Between second and third column */
        }

        /* Remove dividers on mobile */
        @media (max-width: 40rem) { /* 640px equivalent in rem */
          [class*="grid-cols-"]::before,
          [class*="grid-cols-"]::after {
            display: none;
          }
        }

        /* Responsive padding and spacing */
        @media (max-width: 40rem) { /* 640px equivalent */
          .mx-auto {
            padding: 1rem; /* Reduced padding for mobile */
            gap: 1rem; /* Reduced gap for mobile */
          }

          [class*="grid"] > div {
            min-height: 6rem; /* Smaller height on mobile */
          }

          h2 {
            font-size: clamp(1rem, 5vw, 1.5rem); /* Responsive font size */
          }

          p {
            font-size: clamp(0.75rem, 3vw, 0.875rem); /* Responsive font size */
            margin-top: 0.5rem; /* Reduced margin */
          }
        }

        @media (min-width: 40rem) { /* 640px equivalent */
          .mx-auto {
            padding: clamp(1.5rem, 3vw, 2rem) clamp(1rem, 2vw, 1.5rem); /* Responsive padding */
            gap: clamp(1.5rem, 2vw, 2rem); /* Responsive gap */
          }

          h2 {
            font-size: clamp(1.5rem, 4vw, 2.25rem); /* Responsive font size */
          }

          p {
            font-size: clamp(0.875rem, 1.5vw, 1rem); /* Responsive font size */
          }
        }

        @media (min-width: 48rem) { /* 768px equivalent */
          .mx-auto {
            gap: clamp(2rem, 2.5vw, 2.5rem); /* Slightly larger gap */
          }
        }

        @media (min-width: 64rem) { /* 1024px equivalent */
          .mx-auto {
            gap: clamp(2.5rem, 3vw, 3rem); /* Larger gap for larger screens */
          }
        }
      </style>
    </div>
  </Container>
</section>